generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sermon {
  id          String     @id @default(cuid())
  title       String
  speaker     String
  date        DateTime
  type        SermonType @default(SERMON)
  series      String?
  scripture   String?
  videoUrl    String?
  audioUrl    String?
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("sermons")
}

enum SermonType {
  SERMON
  SUNDAY_SCHOOL
  RETREAT_MESSAGE
  BAPTISM_CLASS
}

model News {
  id          String     @id @default(cuid())
  title       String
  date        DateTime
  content     String
  excerpt     String?
  status      NewsStatus @default(PUBLISHED)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("news")
}

enum NewsStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
